<h1><%= @name.arabic_name %></h1>
<p><%= @name.english_transliteration %></p>
<p><b>Dictionary definition: </b><%= @name.dictionary_definition %></p>
<p><b>Etymology: </b><%= @name.etymology %></p>

<!-- TWITTER UI -->
<div class="container">
    <header>
      <div class="bio">
        <img src="http://www.croop.cl/UI/twitter/images/up.jpg" alt="background" class="bg">
        <div class="desc">
          <h3><%= @name.english_transliteration %> | <%= @name.arabic_name %></h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec a diam lectus. Sed sit amet ipsum mauris.</p>
        </div>
      </div>

      <div class="avatarcontainer">
        <img src="http://the99names.com/designs/Allah.jpg" alt="avatar" class="avatar">
        <div class="hover">
            <div class="icon-twitter"></div>
        </div>
      </div>
    </header>

    <div class="content">
      <div class="data">
        <ul style="padding-left: 0px">
          <li>
            2,934
            <span>Tweets</span>
          </li>
          <li>
            <%= @name.arabic_name %>
            <span><%= @name.english_transliteration %></span>
          </li>
          <li>
            530
            <span>Following</span>
          </li>
        </ul>
      </div>

      <div class="follow"> <div class="icon-twitter"></div> Follow</div>
    </div>

</div>


